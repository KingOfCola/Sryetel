<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.QuizActivity">
    <TextView
        android:id="@+id/quiz_question_txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="5dp"
        android:textSize="24sp"
        android:text="@string/questionLabel"/>
    <Button
        android:id="@+id/quiz_answer1_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:textSize="32sp"
        android:textStyle="bold"
        android:background="@color/colorHighlight1"
        android:text="@string/answerLabel"/>
    <Button
        android:id="@+id/quiz_answer2_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:textSize="32sp"
        android:textStyle="bold"
        android:background="@color/colorHighlight1"
        android:text="@string/answerLabel"/>
    <Button
        android:id="@+id/quiz_answer3_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:textSize="32sp"
        android:textStyle="bold"
        android:background="@color/colorHighlight1"
        android:text="@string/answerLabel"/>
    <Button
        android:id="@+id/quiz_answer4_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:textSize="32sp"
        android:textStyle="bold"
        android:background="@color/colorHighlight1"
        android:text="@string/answerLabel"/>

</LinearLayout>